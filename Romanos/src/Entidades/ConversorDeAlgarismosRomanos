
import java.util.HashMap;
import java.util.Map;

public class ConversorDeAlgarismosRomanos {
	Map<Character, Integer> conjunto;

	public ConversorDeAlgarismosRomanos() {
		conjunto = new HashMap<Character, Integer>();

		conjunto.put('I', 1);
		conjunto.put('V', 5);
		conjunto.put('X', 10);
		conjunto.put('L', 50);
	}

	public int converteAlgarismoRomanoParaArabico(String algarismoRomano)
			throws Exception {
		int resultado = 0;
		Character caractere;

		if (todosOsAlgarismosSaoIguais(algarismoRomano) && algarismoRomano.length() > 1) {
			if (verificaSePossueAlgarismoQueNaoPodeSerRepetido(algarismoRomano.charAt(0))) {
				throw new Exception("algarimo invalido!");
			}

			if (algarismoRomano.length() < 4) {
				return conjunto.get(algarismoRomano.charAt(0)) * algarismoRomano.length();
			} else {
				throw new Exception("NÃ£o pode colocar mais que 3 algarimos iguais!");
			}
		}
		
		if (algarismoRomano.length() == 1) {
			resultado += conjunto.get(algarismoRomano.charAt(0));
			return resultado;
		} 
		
		if (algarismoRomano.length() > 1){
			for (int i = 0; i < algarismoRomano.length() - 1; i++) {
				caractere = algarismoRomano.charAt(i);
				int proximoCaractere = i + 1;
				
				if (conjunto.get(caractere) < conjunto.get(algarismoRomano.charAt(proximoCaractere))) {
					resultado += conjunto.get(algarismoRomano.charAt(proximoCaractere)) - conjunto.get(caractere);
				}
				
				if (conjunto.get(caractere) == conjunto.get(algarismoRomano.charAt(proximoCaractere))) {
					resultado += conjunto.get(caractere);
				}
				
				if (conjunto.get(caractere) > conjunto.get(algarismoRomano.charAt(proximoCaractere))) {
					resultado += conjunto.get(caractere);
				}
			}
		}

		return resultado;
	}

	private boolean todosOsAlgarismosSaoIguais(String algarismoRomano) {
		for (int i = 0; i < algarismoRomano.length() - 1; i++) {
			if (algarismoRomano.charAt(i) != algarismoRomano.charAt(i + 1)) {
				return false;
			}
		}
		return true;
	}

	private boolean verificaSePossueAlgarismoQueNaoPodeSerRepetido(char algarismoQueNaoPodeSerRepetido) {

		if (algarismoQueNaoPodeSerRepetido == 'V' || algarismoQueNaoPodeSerRepetido == 'L' || algarismoQueNaoPodeSerRepetido == 'D') {
			return true;
		}
		return false;
	}
}
